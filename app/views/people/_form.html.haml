= form_for @person do |f|
  - if @person.errors.any?
    #error_explanation
      %h2= "#{pluralize(@person.errors.count, "error")} prohibited this person from being saved:"
      %ul
        - @person.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :second_name
    = f.text_field :second_name
  .field
    = f.label :birthday
    = f.date_select :birthday
  .field
    = f.label :sex
    = f.text_field :sex
  = f.fields_for :contracts do |cf|
    = cf.hidden_field :id  
    = cf.hidden_field :person_id
    .field
      = cf.label :post_id
      = cf.select :post_id, post_options(cf.object.post_id)
    .field
      = cf.label :salary
      = cf.number_field :salary      
      
  .actions
    = f.submit 'Save'
